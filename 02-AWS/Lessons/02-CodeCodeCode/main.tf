terraform {
  backend "s3" {
    bucket = "cloud-hippie-terraform-state-bucket"
    key    = "codecodecode-terraform.tfstate"
    region = "us-east-1"
  }
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 3.0"
    }
  }
}

# Configure the AWS Provider
provider "aws" {
  region = "us-east-1"
}

